extends ../common/layout
block content
  #layoutSidenav_content
    main
      .container-fluid
        h1.mt-4 Product Categories
        ol.breadcrumb.mb-4
          li.breadcrumb-item
            a(href='index.html') Dashboard
          li.breadcrumb-item.active Product Categories
        .card.mb-4
          .card-body
            | DataTables is a third party plugin that is used to generate the demo table below. For more information
            | about DataTables, please visit the
            a(target='_blank' href='https://datatables.net/') official DataTables documentation
            |               .
        .card.mb-4
          .card-header
            i.fas.fa-table.mr-1
            |               DataTable Example
          .card-body
            .table-responsive
              table#dataTable.table.table-bordered(width='100%' cellspacing='0')
                thead
                  tr
                    th Name
                    th Description
                    th.text-center Status
                    th Edit
                    th Delete
                tfoot
                  tr
                    th Name
                    th Description
                    th.text-center Status
                    th Edit
                    th Delete
                tbody
                  each category in categories
                    tr
                      td= category.name
                      td= category.description
                      td
                        if category.status
                          h5.text-center.text-success
                            i.fas.fa-check-circle
                        else 
                          h5.text-center.text-danger
                            i.fas.fa-minus-circle
                      td(name= category.id)
                        button.btn.btn-warning
                          i.fas.fa-edit
                      td(name= category.id)
                        button.btn.btn-danger
                          i.fas.fa-trash-alt
    include ../common/footer
