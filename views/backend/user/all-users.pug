extends ../common/layout
block content
  #layoutSidenav_content
    main
      .container-fluid
        h1.mt-4 Users
        ol.breadcrumb.mb-4
          li.breadcrumb-item
            a(href='index.html') Dashboard
          li.breadcrumb-item.active Users
        #error-message.alert.alert-danger
        #success-message.alert.alert-success
        .card.mb-4
          .card-header
            i.fas.fa-table.mr-1
            |               Users Table
          .card-body
            .table-responsive
              table#dataTable.table.table-bordered(width='100%' cellspacing='0')
                thead
                  tr
                    th Username
                    th Fullname
                    th Email
                    th Address
                    th Phone
                    th Role
                    th Status
                    th Edit
                    th Remove
                tfoot
                  tr
                    th Username
                    th Fullname
                    th Email
                    th Address
                    th Phone
                    th Role
                    th Status
                    th Edit
                    th Remove
                tbody
                  each user in users
                    tr
                      td= user.username
                      td= user.fullname
                      td= user.email
                      td= user.address
                      td= user.phoneNumber
                      td.text-capitalize= user.role
                      td
                        if user.status
                          h5.text-center.text-success
                            i.fas.fa-check-circle
                        else 
                          h5.text-center.text-danger
                            i.fas.fa-minus-circle
                      td(name= user.id)
                        button.btn.btn-warning
                          i.fas.fa-edit
                      td(name= user.id)
                        button.btn.btn-secondary.delete-user
                          i.fas.fa-trash-alt
    include ../common/footer
    script.
      $('#error-message').hide();
      $('#success-message').hide();
      
      $(document).ready(function(){
        $('.delete-user').click(function(){
          var answer = confirm("Are you sure you want to delete " + $(this).parent().parent().children().first().text() + '?');
          if (answer === false) {
            return;
          }
          var name = $(this).parent().attr('name');
          var selector = $(this);
          $.ajax({
            url: '/admin/users/' + name,
            type: 'delete',
            contentType: "application/json",
            dataType: "json",
            success: function(data) {
              selector.parent().parent().remove();
              $('#success-message').text('Delete ' + data.username + ' successfully!');
              $('#success-message').show();
              $('#error-message').hide();
            },
            error: function (jqXhr, textStatus, errorMessage) { // error callback 
              $('#error-message').text('Error.');
              $('#error-message').show();
            }
          });
        });
      });