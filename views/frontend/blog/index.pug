extends ../common/layout
block content
  // Header Section Begin
  header.header-section
    .header-top
      .container
        .ht-left
          .mail-service
            i.fa.fa-envelope
            |                         hello.colorlib@gmail.com
          .phone-service
            i.fa.fa-phone
            |                         +65 11.188.888
        .ht-right
          a.login-panel(href='#')
            i.fa.fa-user
            | Login
          .lan-selector
            select#countries.language_drop(name='countries' style='width:300px;')
              option(value='yt' data-image='img/flag-1.jpg' data-imagecss='flag yt' data-title='English') English
              option(value='yu' data-image='img/flag-2.jpg' data-imagecss='flag yu' data-title='Bangladesh') German
          .top-social
            a(href='#')
              i.ti-facebook
            a(href='#')
              i.ti-twitter-alt
            a(href='#')
              i.ti-linkedin
            a(href='#')
              i.ti-pinterest
    .container
      .inner-header
        .row
          .col-lg-2.col-md-2
            .logo
              a(href='./index.html')
                img(src='img/logo.png' alt='')
          .col-lg-7.col-md-7
            .advanced-search
              button.category-btn(type='button') All Categories
              form.input-group(action='#')
                input(type='text' placeholder='What do you need?')
                button(type='button')
                  i.ti-search
          .col-lg-3.text-right.col-md-3
            ul.nav-right
              li.heart-icon
                a(href='#')
                  i.icon_heart_alt
                  span 1
              li.cart-icon
                a(href='#')
                  i.icon_bag_alt
                  span 3
                .cart-hover
                  .select-items
                    table
                      tbody
                        tr
                          td.si-pic
                            img(src='img/select-product-1.jpg' alt='')
                          td.si-text
                            .product-selected
                              p $60.00 x 1
                              h6 Kabino Bedside Table
                          td.si-close
                            i.ti-close
                        tr
                          td.si-pic
                            img(src='img/select-product-2.jpg' alt='')
                          td.si-text
                            .product-selected
                              p $60.00 x 1
                              h6 Kabino Bedside Table
                          td.si-close
                            i.ti-close
                  .select-total
                    span total:
                    h5 $120.00
                  .select-button
                    a.primary-btn.view-card(href='#') VIEW CARD
                    a.primary-btn.checkout-btn(href='#') CHECK OUT
              li.cart-price $150.00
    .nav-item
      .container
        .nav-depart
          .depart-btn
            i.ti-menu
            span All departments
            ul.depart-hover
              li.active
                a(href='#') Women&rsquo;s Clothing
              li
                a(href='#') Men&rsquo;s Clothing
              li
                a(href='#') Underwear
              li
                a(href='#') Kid&apos;s Clothing
              li
                a(href='#') Brand Fashion
              li
                a(href='#') Accessories/Shoes
              li
                a(href='#') Luxury Brands
              li
                a(href='#') Brand Outdoor Apparel
        nav.nav-menu.mobile-menu
          ul
            li
              a(href='./index.html') Home
            li
              a(href='./shop.html') Shop
            li
              a(href='#') Collection
              ul.dropdown
                li
                  a(href='#') Men&apos;s
                li
                  a(href='#') Women&apos;s
                li
                  a(href='#') Kid&apos;s
            li.active
              a(href='./blog.html') Blog
            li
              a(href='./contact.html') Contact
            li
              a(href='#') Pages
              ul.dropdown
                li
                  a(href='./blog-details.html') Blog Details
                li
                  a(href='./shopping-cart.html') Shopping Cart
                li
                  a(href='./check-out.html') Checkout
                li
                  a(href='./faq.html') Faq
                li
                  a(href='./register.html') Register
                li
                  a(href='./login.html') Login
        #mobile-menu-wrap
  // Header End
  // Breadcrumb Section Begin
  .breacrumb-section
    .container
      .row
        .col-lg-12
          .breadcrumb-text
            a(href='#')
              i.fa.fa-home
              |  Home
            span Blog
  // Breadcrumb Section Begin
  // Blog Section Begin
  section.blog-section.spad
    .container
      .row
        .col-lg-3.col-md-6.col-sm-8.order-2.order-lg-1
          .blog-sidebar
            .search-form
              h4 Search
              form(action='#')
                input(type='text' placeholder='Search . . .  ')
                button(type='submit')
                  i.fa.fa-search
            .blog-catagory
              h4 Categories
              ul
                li
                  a(href='#') Fashion
                li
                  a(href='#') Travel
                li
                  a(href='#') Picnic
                li
                  a(href='#') Model
            .recent-post
              h4 Recent Post
              .recent-blog
                -var count = 1
                if posts.length >= 4
                  while count < 5
                    a.rb-item(href='#')
                    .rb-pic
                      img(src= posts[posts.length - count].avatar, alt='')
                    .rb-text
                      h6= posts[posts.length - count].title
                      p
                        | Fashion 
                        span= posts[posts.length - count].createdDate
                    -count++
                else 
                  while count < posts.length
                    a.rb-item(href='#')
                    .rb-pic
                      img(src= posts[posts.length - count].avatar, alt='')
                    .rb-text
                      h6= posts[posts.length - count].title
                      p
                        | Fashion 
                        span= posts[posts.length - count].createdDate
                    -count++

            .blog-tags
              h4 Product Tags
              .tag-item
                a(href='#') Towel
                a(href='#') Shoes
                a(href='#') Coat
                a(href='#') Dresses
                a(href='#') Trousers
                a(href='#') Men&apos;s hats
                a(href='#') Backpack
        .col-lg-9.order-1.order-lg-2
          .row
            each post in posts
              .col-lg-6.col-sm-6
                .blog-item
                  .bi-pic
                    img(src= post.avatar, alt='')
                  .bi-text
                    a(href= "/post/" + post.id)
                      h4= post.title
                    p= post.categoryId
                      span= post.createdDate
            .col-lg-12
              .loading-more
                i.icon_loading
                a(href='#')
                  | Loading More
  // Blog Section End
  include ../common/footer