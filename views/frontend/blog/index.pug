extends ../common/layout
block content
  // Breadcrumb Section Begin
  .breacrumb-section
    .container
      .row
        .col-lg-12
          .breadcrumb-text
            a(href='#')
              i.fa.fa-home
              |  Home
            span Blog
  // Breadcrumb Section Begin
  // Blog Section Begin
  section.blog-section.spad
    .container
      .row
        .col-lg-3.col-md-6.col-sm-8.order-2.order-lg-1
          .blog-sidebar
            .search-form
              h4 Search
              form(action='#')
                input(type='text' placeholder='Search . . .  ')
                button(type='submit')
                  i.fa.fa-search
            .blog-catagory
              h4 Categories
              ul
                li
                  a(href='#') Fashion
                li
                  a(href='#') Travel
                li
                  a(href='#') Picnic
                li
                  a(href='#') Model
            .recent-post
              h4 Recent Post
              .recent-blog
                -var count = 1
                if posts.length >= 4
                  while count < 5
                    a.rb-item(href= "/post/" + posts[posts.length - count].id)
                      .rb-pic
                        img(src= posts[posts.length - count].avatar, alt='')
                      .rb-text
                        h6= posts[posts.length - count].title
                        p
                          | #{posts[posts.length - count].category.name} 
                          span= posts[posts.length - count].createdDate
                      -count++
                else 
                  while count <= posts.length
                    a.rb-item(href= "/post/" + posts[posts.length - count].id)
                      .rb-pic
                        img(src= posts[posts.length - count].avatar, alt='')
                      .rb-text
                        h6= posts[posts.length - count].title
                        p
                          | #{posts[posts.length - count].category.name} 
                          span= posts[posts.length - count].createdDate
                      -count++

            .blog-tags
              h4 Product Tags
              .tag-item
                a(href='#') Towel
                a(href='#') Shoes
                a(href='#') Coat
                a(href='#') Dresses
                a(href='#') Trousers
                a(href='#') Men&apos;s hats
                a(href='#') Backpack
        .col-lg-9.order-1.order-lg-2
          .row
            each post in posts
              .col-lg-6.col-sm-6
                .blog-item
                  .bi-pic
                    img(style="object-fit: contain;", src= post.avatar, alt='')
                  .bi-text
                    a(href= "/post/" + post.id)
                      h4= post.title
                    p= post.category.name +' '
                      span= post.createdDate
            .col-lg-12
              .loading-more
                i.icon_loading
                a(href='#')
                  | Loading More
  // Blog Section End
  include ../common/footer