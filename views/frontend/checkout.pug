extends ./common/layout
block content
  // Header Section Begin
  header.header-section
    .header-top
      .container
        .ht-left
          .mail-service
            i.fa.fa-envelope
            |                         hello.colorlib@gmail.com
          .phone-service
            i.fa.fa-phone
            |                         +65 11.188.888
        .ht-right
          a.login-panel(href='#')
            i.fa.fa-user
            | Login
          .lan-selector
            select#countries.language_drop(name='countries' style='width:300px;')
              option(value='yt' data-image='img/flag-1.jpg' data-imagecss='flag yt' data-title='English') English
              option(value='yu' data-image='img/flag-2.jpg' data-imagecss='flag yu' data-title='Bangladesh') German 
          .top-social
            a(href='#')
              i.ti-facebook
            a(href='#')
              i.ti-twitter-alt
            a(href='#')
              i.ti-linkedin
            a(href='#')
              i.ti-pinterest
    .container
      .inner-header
        .row
          .col-lg-2.col-md-2
            .logo
              a(href='./index.html')
                img(src='img/logo.png' alt='')
          .col-lg-7.col-md-7
            .advanced-search
              button.category-btn(type='button') All Categories
              form.input-group(action='#')
                input(type='text' placeholder='What do you need?')
                button(type='button')
                  i.ti-search
          .col-lg-3.text-right.col-md-3
            ul.nav-right
              li.heart-icon
                a(href='#')
                  i.icon_heart_alt
                  span 1
              li.cart-icon
                a(href='#')
                  i.icon_bag_alt
                  span 3
                .cart-hover
                  .select-items
                    table
                      tbody
                        tr
                          td.si-pic
                            img(src='img/select-product-1.jpg' alt='')
                          td.si-text
                            .product-selected
                              p $60.00 x 1
                              h6 Kabino Bedside Table
                          td.si-close
                            i.ti-close
                        tr
                          td.si-pic
                            img(src='img/select-product-2.jpg' alt='')
                          td.si-text
                            .product-selected
                              p $60.00 x 1
                              h6 Kabino Bedside Table
                          td.si-close
                            i.ti-close
                  .select-total
                    span total:
                    h5 $120.00
                  .select-button
                    a.primary-btn.view-card(href='#') VIEW CARD
                    a.primary-btn.checkout-btn(href='#') CHECK OUT
              li.cart-price $150.00
    .nav-item
      .container
        .nav-depart
          .depart-btn
            i.ti-menu
            span All departments
            ul.depart-hover
              li.active
                a(href='#') Women&rsquo;s Clothing
              li
                a(href='#') Men&rsquo;s Clothing
              li
                a(href='#') Underwear
              li
                a(href='#') Kid&apos;s Clothing
              li
                a(href='#') Brand Fashion
              li
                a(href='#') Accessories/Shoes
              li
                a(href='#') Luxury Brands
              li
                a(href='#') Brand Outdoor Apparel
        nav.nav-menu.mobile-menu
          ul
            li
              a(href='./home.html') Home
            li
              a(href='./shop.html') Shop
            li
              a(href='#') Collection
              ul.dropdown
                li
                  a(href='#') Men&apos;s
                li
                  a(href='#') Women&apos;s
                li
                  a(href='#') Kid&apos;s
            li
              a(href='./blog.html') Blog
            li
              a(href='./contact.html') Contact
            li
              a(href='#') Pages
              ul.dropdown
                li
                  a(href='./blog-details.html') Blog Details
                li
                  a(href='./shopping-cart.html') Shopping Cart
                li
                  a(href='./check-out.html') Checkout
                li
                  a(href='./faq.html') Faq
                li
                  a(href='./register.html') Register
                li
                  a(href='./login.html') Login
        #mobile-menu-wrap
  // Header End
  // Breadcrumb Section Begin
  .breacrumb-section
    .container
      .row
        .col-lg-12
          .breadcrumb-text.product-more
            a(href='./index.html')
              i.fa.fa-home
              |  Home
            a(href='./shop.html') Shop
            span Check Out
  // Breadcrumb Section Begin
  // Shopping Cart Section Begin
  section.checkout-section.spad
    .container
      form.checkout-form(action='#')
        .row
          .col-lg-6
            .checkout-content
              a.content-btn(href='#') Click Here To Login
            h4 Biiling Details
            .row
              .col-lg-6
                label(for='fir')
                  | First Name
                  span *
                input#fir(type='text')
              .col-lg-6
                label(for='last')
                  | Last Name
                  span *
                input#last(type='text')
              .col-lg-12
                label(for='cun-name') Company Name
                input#cun-name(type='text')
              .col-lg-12
                label(for='cun')
                  | Country
                  span *
                input#cun(type='text')
              .col-lg-12
                label(for='street')
                  | Street Address
                  span *
                input#street.street-first(type='text')
                input(type='text')
              .col-lg-12
                label(for='zip') Postcode / ZIP (optional)
                input#zip(type='text')
              .col-lg-12
                label(for='town')
                  | Town / City
                  span *
                input#town(type='text')
              .col-lg-6
                label(for='email')
                  | Email Address
                  span *
                input#email(type='text')
              .col-lg-6
                label(for='phone')
                  | Phone
                  span *
                input#phone(type='text')
              .col-lg-12
                .create-item
                  label(for='acc-create')
                    | Create an account?
                    input#acc-create(type='checkbox')
                    span.checkmark
          .col-lg-6
            .checkout-content
              input(type='text' placeholder='Enter Your Coupon Code')
            .place-order
              h4 Your Order
              .order-total
                ul.order-table
                  li
                    | Product 
                    span Total
                  li.fw-normal
                    | Combination x 1 
                    span $60.00
                  li.fw-normal
                    | Combination x 1 
                    span $60.00
                  li.fw-normal
                    | Combination x 1 
                    span $120.00
                  li.fw-normal
                    | Subtotal 
                    span $240.00
                  li.total-price
                    | Total 
                    span $240.00
                .payment-check
                  .pc-item
                    label(for='pc-check')
                      | Cheque Payment
                      input#pc-check(type='checkbox')
                      span.checkmark
                  .pc-item
                    label(for='pc-paypal')
                      | Paypal
                      input#pc-paypal(type='checkbox')
                      span.checkmark
                .order-btn
                  button.site-btn.place-btn(type='submit') Place Order
  // Shopping Cart Section End
  include ./common/footer