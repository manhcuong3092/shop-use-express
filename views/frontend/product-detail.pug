                    .comment-option
                      each comment in product.comments
                        .co-item
                          .avatar-pic
                            img(src='img/product-single/avatar-1.png' alt='')
                          .avatar-text
                            .at-rating
                              -var n = 0
                              while n < 5
                                if n < comment.rate
                                  i.fa.fa-star
                                else 
                                  i.fa.fa-star-o
                                -n++
                                
