                  i.fa.fa-star
                  i.fa.fa-star
                  i.fa.fa-star
                  i.fa.fa-star-o
                  span (5)
                .pd-desc
                  p= product.shortDescription
                  h4= "$" + product.salePrice
                    span= product.price
                .pd-color
