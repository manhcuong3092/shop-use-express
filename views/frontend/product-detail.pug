                  while i < product.images.length
                    if i == 0
                      .pt.active(data-imgbigurl= product.images[i])
                        img(src= product.images[i++] alt='')
                    else
                      .pt.active(data-imgbigurl= product.images[i])
                        img(src= product.images[i++] alt='')
            .col-lg-6
              .product-details
                .pd-title
                  span= product.category
                  h3= product.name
                  a.heart-icon(href='#')
                    i.icon_heart_alt
                .pd-rating
